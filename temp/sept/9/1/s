-- 1. Verifying Data in COMPONENT_DOMAIN_MAP for INFRA_COMPONENT_ID = 3 (AIX)
SELECT * 
FROM COMPONENT_DOMAIN_MAP 
WHERE INFRA_COMPONENT_ID = 3;

-- 2. Verifying Data in INFRA_COMPONENT for INFRA_COMPONENT_ID = 3 (AIX)
SELECT * 
FROM INFRA_COMPONENT 
WHERE INFRA_COMPONENT_ID = 3;

-- 3. Verifying Data in SSP_INFRA_DOMAINS
SELECT * 
FROM SSP_INFRA_DOMAINS;

-- 4. Testing Join Query without STATUS Filter (to check if AIX data is present)
SELECT 
    cdm.INFRA_COMPONENT_ID AS componentId, 
    cdm.SSP_INFRA_DOMAINS_ID AS infraDomainId, 
    ic.INFRA_COMPONENT_NAME AS componentName, 
    sid.DOMAIN_NAME AS domainName
FROM 
    COMPONENT_DOMAIN_MAP cdm
INNER JOIN 
    INFRA_COMPONENT ic 
    ON ic.INFRA_COMPONENT_ID = cdm.INFRA_COMPONENT_ID
INNER JOIN 
    SSP_INFRA_DOMAINS sid 
    ON sid.SSP_INFRA_DOMAINS_ID = cdm.SSP_INFRA_DOMAINS_ID;

-- 5. Full Join Query with STATUS = 1 Filter (used in the final implementation)
SELECT 
    cdm.INFRA_COMPONENT_ID AS componentId, 
    cdm.SSP_INFRA_DOMAINS_ID AS infraDomainId, 
    ic.INFRA_COMPONENT_NAME AS componentName, 
    sid.DOMAIN_NAME AS domainName
FROM 
    COMPONENT_DOMAIN_MAP cdm
INNER JOIN 
    INFRA_COMPONENT ic 
    ON ic.INFRA_COMPONENT_ID = cdm.INFRA_COMPONENT_ID
INNER JOIN 
    SSP_INFRA_DOMAINS sid 
    ON sid.SSP_INFRA_DOMAINS_ID = cdm.SSP_INFRA_DOMAINS_ID
WHERE 
    cdm.STATUS = 1;
